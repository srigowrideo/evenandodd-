COUNT EQU 5H
DATA  SEGMENT
      NUMAR DW 1234H,5678H,3496H,5129H,7235H
      EVEN _N DB 0H 
       ODD _ N  DB  0H 
DATA   ENDS 
CODE SEGMENT
ASSUME CS: CODE , DS:DATA 
START:MOV AX,DATA;
MOV DS,AX ;
MOV CL,COUNT ; 
MOV SI, OFFSET NUMAR; 
AGAIN: MOV AX,[SI];
SHR AX,01 ;
JC ODD;
INC EVEN_N;
JMP  NEXT ;
ODD:,INC ODD_N ;
NEXT: ADD SI,02 ;
DEC  CL;
JNZ AGAIN ;
MOV AH,4CH ;
INT 21H ;
CODE ENDS 
END START

